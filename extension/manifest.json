{
  "manifest_version": 3,
  "name": "Polycast â€” YouTube & Netflix Word Saver",
  "version": "1.0.0",
  "description": "Click words in YouTube and Netflix subtitles to look them up and save to your Polycast dictionary.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.youtube.com/*",
    "https://*.netflix.com/*",
    "http://localhost:3001/*",
    "https://polycast-sequel.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content/shared.js", "content/youtube.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["content/shared.js", "content/netflix.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
